
@{
	Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
@model BaiTapLonDuAnMau.Models.Payment
<!DOCTYPE html>
<html>
<head>
	<style>

		.tab {
			float: left;
			border: 1px solid #ccc;
			background-color: #f1f1f1;
			width: 15%;
			height: 400px;
		}

			.tab button {
				display: block;
				background-color: inherit;
				color: black;
				padding: 22px 16px;
				width: 100%;
				border: none;
				outline: none;
				text-align: left;
				cursor: pointer;
				font-size: 17px;
			}

				.tab button:hover {
					background-color: #ddd;
				}

				.tab button.active {
					background-color: #ccc;
				}


		.tabcontent {
			float: left;
			padding: 30px 40px;
			border: none;
			width: 70%;
			border-left: none;
			height: 400px;
		}


		input[type="text"], input[type="password"] {
			display: block;
			box-sizing: border-box;
			border: none;
			border-bottom: 6px solid;
			background: #ffffff;
			padding: 5px;
			margin: 0px 0px 2px 0px;
			border: 1px solid #888888;
			width: 50%;
		}

		p {
			margin: 10px 0px 3px 0px;
			font-size: 17px;
			font-width: 17px strong;
		}

		input[type="submit"], input[type="reset"] {
			background-color: #d9d9d9;
			color: black;
			padding: 10px 20px;
			margin: 15px 10px 20px 40px;
			border: none;
			border-radius: 5px;
			cursor: pointer;
			width: 15%;
			text: strong;
		}
	</style>
</head>

<body>
	<h1>Payment </h1>
	@*<div class="tab">
		<button class="tablinks" onclick="openCity(event, 'Credit Card')" id="defaultOpen">Credit Card</button>
		<button class="tablinks" onclick="openCity(event, 'Debit Card')">Debit Card</button>
		<button class="tablinks" onclick="openCity(event, 'Debit Card + ATM Pin')">Debit Card + ATM Pin</button>
		<button class="tablinks" onclick="openCity(event, 'Internet Banking')">Internet Banking</button>
		<button class="tablinks" onclick="openCity(event, 'Wallet/Cash Card')">Wallet/Cash Card</button>
		<button class="tablinks" onclick="openCity(event, 'IMPS')">IMPS</button>
		<button class="tablinks" onclick="openCity(event, 'payOnArrivalSection')">Pay On ArrivalSection</button>
	</div>*@

	
	<form id="creditCardForm" action="@Url.Action("SubmitPayment", "Payment")" method="post">
		<label for="totalAmount">Total Amount:</label>
		<input type="number" name="totalAmount" value="@ViewBag.TotalAmount" readonly>
		<input type="hidden" name="RoomId" value=" @ViewBag.RoomId">
		@if (ViewBag.SelectedServicesId != null)
		{
			@foreach (var serviceId in ViewBag.SelectedServicesId)
			{
				<!-- Hiển thị hoặc thực hiện các thao tác khác với serviceId -->
				<input type="hidden" name="selectedServices" value="@serviceId">
			}
		}
		<input type="datetime-local" id="paymentDate" name="paymentDate">
			
	<select id="paymentMethodSelect" onchange="togglePaymentForm()" name="paymentMethod">
		<option value="Credit Card">Credit Card</option>
		<option value="Debit Card">Debit Card</option>
		<option value="Debit Card + ATM Pin">Debit Card + ATM Pin</option>
		<option value="Internet Banking">Internet Banking</option>
		<option value="Wallet/Cash Card">Wallet/Cash Card</option>
		<option value="IMPS">IMPS</option>
		<option value="payOnArrivalSection">Pay On ArrivalSection</option>
			<input type="submit" value="submit" />
	</select>
	</form>
	<div id="paymentForms">
		<div id="Credit Card" class="paymentForm">
			<div class="tabcontent">
				<h3>Pay by Credit Card</h3>
				<p>Card Number</p>
				<input type="text" name="card" placeholder="Enter Card Number">
				<p>Expiration Date</p>
				<input type="month" name="month" placeholder="Month">
				<p>CVV/CVC</p>
				<input type="text" name="cvv">
				<p>Card Holder Name</p>
				<input type="text" name="name" placeholder="Enter Card Holder Name">

			</div>
		</div>

		<div id="Debit Card" class="paymentForm" style="display: none;">
			<div class="tabcontent">
				<h3>Pay by Debit Card</h3>
				<p>Card Number</p>
				<input type="text" name="card" placeholder="Enter Card Number">

				<p>Expiration Date</p>
				<input type="month" name="month" placeholder="Month">

				<p>CVV/CVC</p>
				<input type="text" name="cvv">

				<p>Card Holder Name</p>
				<input type="text" name="name" placeholder="Enter Card Holder Name">

			</div>
		</div>

		<div id="Debit Card + ATM Pin" class="paymentForm" style="display: none;">
			<div class="tabcontent">
				<h3>Pay by Debit Card + ATM Pin</h3>
				<p>Card Number</p>
				<input type="text" name="card" placeholder="Enter Card Number">

				<p>Expiration Date</p>
				<input type="month" name="month" placeholder="Month">

				<p>CVV/CVC</p>
				<input type="text" name="cvv">

				<p>Card Holder Name</p>
				<input type="text" name="name" placeholder="Enter Card Holder Name">

				<p>Pin</p>
				<input type="password" name="pwd" placeholder="Enter Pin">
			</div>
		</div>
		<div id="Internet Banking" class="paymentForm" style="display: none;">
			<div class="tabcontent">
				<h3>Pay by Internet Banking</h3>
				<p>User ID</p>
				<input type="text" name="userid">

				<p>ATM Pin/Password</p>
				<input type="password" name="pwd">

			</div>
		</div>
		<div id="Wallet/Cash Card" class="paymentForm" style="display: none;">
			<div class="tabcontent">
				<h3>Pay by Wallet/Cash Card</h3>
				<p>Card Number</p>
				<input type="text" name="card" placeholder="Enter Card Number">

				<p>Pin</p>
				<input type="password" name="pwd" placeholder="Enter Pin">

				</div>
		</div>
		<div id="IMPS" class="paymentForm" style="display: none;">
			<div class="tabcontent">
				<h3>Pay by IMPS</h3>
				<p>Beneficiary Mobile Number</p>
				<input type="text" name="mobile">

				<p>Beneficiary MMID</p>
				<input type="text" name="mmid">

				<p>Amount</p>
				<input type="text" name="amount">

				<p>Remarks</p>
				<input type="text" name="remarks">

				<p>Transaction Password</p>
				<input type="password" name="pwd">

			</div>
		</div>
		<div id="payOnArrivalSection" class="paymentForm" style="display: none;">
			<div class="tabcontent">
				
			</div>
		</div>
		
	</div>
	<script>
		function openCity(evt, mop) {
			var i, tabcontent, tablinks;
			tabcontent = document.getElementsByClassName("tabcontent");
			for (i = 0; i < tabcontent.length; i++) {
				tabcontent[i].style.display = "none";
			}

			tablinks = document.getElementsByClassName("tablinks");
			for (i = 0; i < tablinks.length; i++) {
				tablinks[i].className = tablinks[i].className.replace(" active", "");
			}

			document.getElementById(mop).style.display = "block";
			evt.currentTarget.className += " active";
		}

		// Get the element with id="defaultOpen" and click on it
		document.getElementById("defaultOpen").click();
	</script>
	
		
	</script>
	<script>
		function togglePaymentForm() {
			var paymentMethodSelect = document.getElementById("paymentMethodSelect");
			var selectedPaymentMethod = paymentMethodSelect.options[paymentMethodSelect.selectedIndex].value;
			console.log(selectedPaymentMethod);
			// Ẩn tất cả các form
			var paymentForms = document.getElementsByClassName("paymentForm");
			for (var i = 0; i < paymentForms.length; i++) {
				paymentForms[i].style.display = "none";
			}

			// Hiển thị form cho phương thức thanh toán được chọn
			var selectedPaymentForm = document.getElementById(selectedPaymentMethod );
			console.log(selectedPaymentForm);
			if (selectedPaymentForm) {
				selectedPaymentForm.style.display = "block";
			}
		}
	</script>
</body>
</html>

